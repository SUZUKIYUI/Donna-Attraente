<% if notification2.offer.offer_status == :negotiation %>
  <div class="notification_content">
    <div class="notification_content_flex">
      <div class="notification_content1">
        <%= link_to design_contributor_company_path(notification2.company) do %>
          <%= attachment_image_tag notification2.company, :profile_image, :fill, 50, 50, fallback: "no_image_company.png", size: "50x50", class: "notification_content_img" %>
        <% end %>
      </div>
      <div class="notification_content2">
        <%= notification2_form(notification2) %><br />
        <span><%= "(#{time_ago_in_words(notification2.created_at)}前)" %></span>
      </div>
    </div>
  </div>
<% else %>
  <div class="notification_content">
    <p>通知はありません</p>
  </div>
<% end %>

