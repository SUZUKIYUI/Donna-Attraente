<h1>企業詳細画面</h1>

<%= attachment_image_tag @company, :profile_image, :fill, 400, 500, fallback: "no_image.jpg" %>
<%= @company.company_name %>
<%= @company.company_name_kana %>
<p>企業紹介文</p>
<%= @company.company_introduction %>
<!--------------------------------->

<!-------------------もし商品化決定デザインがあれば全て公開------------------->
<% if @company.offered_by? && @company.offered_established_by?(@company.id) %>
    <p>商品化決定デザイン</p>
    <% @offers.each do |offer| %>
        <%= link_to design_contributor_post(offer.post.id) do %>
            <%= attachment_image_tag offer.post, :post_image, :fill, 300,400 %>
        <% end %>
    <% end %>
<% end %>
<!---------------------------------------------------------------------------->

<!----------------------------------------------------------------------->
<p>住所</p>
<span>郵便番号</span>
<%= @company.postal_code.insert(3, "-") %>
<%= @company.address %>
<p>TEL</p>
<%= @company.phone_number %>
<p>E-mail</p>
<%= @company.email %>