<!--デザイン投稿者詳細画面-->

<div class="content_width">
  <div class="user_top show_top_back">
    <div class="user_lead show_lead">
      <% if @design_contributor == current_design_contributor %>
        <h2 class="show_lead_bold">マイページ</h2>
      <% else %>
        <h2 class="show_lead_bold">ユーザーページ</h2>
      <% end %>
    </div>
    <!-----------------見出し------------------>
    <div class="heading_top">
      <% if @design_contributor == current_design_contributor %>
        <h1 class="heading_top_item show_heading_top_item">My page</h1>
      <% else %>
        <h1 class="heading_top_item">User page</h1>
      <% end %>
    </div>
  </div>

  <div class="user_bottom show_bottom_back">
    <%= attachment_image_tag @design_contributor, :profile_image, :fill, 150, 150, fallback: "no_image.jpg" %>
    <%= @design_contributor.pen_name %>
    <p>自己紹介</p>
    <%= @design_contributor.self_introduction %>
    <%= link_to "プロフィールを編集する", edit_design_contributor_design_contributor_path(@design_contributor.id) %>

    <!------------------------------------------------------------------------------------------------------------->
    <p>デザイン一覧</p>
    <% @design_contributor.posts.each do |post| %>
      <%= link_to design_contributor_post_path(post.id) do %>
        <%= attachment_image_tag post, :post_image, :fill, 200, 300 %>
      <% end %>
    <% end %>
  </div>
</div>
