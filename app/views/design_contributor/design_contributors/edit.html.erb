<!--デザイン投稿者編集画面-->

<div class="content_width user_edit_back">

  <h1 class="user_edit_heading1">プロフィール編集</h1>

  <div class="design_contributor_form">
    <!-------未入力の時のエラー文表示------->
    <% if @design_contributor.errors.any? %>
      <div class="error_box">
        <ul>
          <% @design_contributor.errors.full_messages.each do |message| %>
            <li class="error_list">
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <!------------------------------------------------------------------------------------------------------------------------------------->
    <%= form_with model: @design_contributor, url: design_contributor_design_contributor_path(@design_contributor.id), local: true do |f| %>
      <div class="user_input_form">
        <label class="input_profile_image1">プロフィール画像を選択してください
          <%= f.attachment_field :profile_image, class: "user_input input_profile_image2" %>
        </label>
      </div>
      <div class="user_input_form">
        <%= f.label :pen_name, class: "design_contributor_label" %>
        <%= f.text_field :pen_name, class: "user_input pen_name_input" %>
      </div>
      <div class="user_input_form">
        <%= f.label :email, class: "design_contributor_label" %>
        <%= f.text_field :email, class: "user_input" %>
      </div>
      <div class="user_input_form">
        <%= f.label :self_introduction, class: "design_contributor_label" %>
        <%= f.text_area :self_introduction, class: "user_input introduction_input" %>
      </div>
      <div class="user_input_btn_form">
        <%= f.submit "編集", class: "user_input_btn" %>
      </div>
    <% end %>
  </div>
</div>