<!--デザイン投稿者投稿作品一覧画面-->

<div class="content_width posts_content">
  <div class="posts_top">
    <div class="posts_lead1">
      <h2 class="posts_lead_bold">作品一覧</h2>
      <p>こちらのページでは皆様の投稿した<br />ワンピースのデザインがご覧いただけます。</p>
    </div>
    <!-----------------見出し------------------>
    <div class="posts_heading">
      <h1 class="posts_heading_item">Works</h1>
    </div>
  </div>

  <div class="posts_bottom">
    <div class="posts_lead2">
      <h3 class="posts_lead2_bold">投稿作品</h3>
      <span>新着順</span>
    </div>
    <div class="posts_box">
      <% @posts.each do |post| %>
        <div class="post_box">
          <div class="post_show_link">
            <%= link_to design_contributor_post_path(post.id) do %>
              <%= attachment_image_tag post, :post_image, :fill, 250, 350 %>
            <% end %>
          </div>
          <div class="user_show_link">
            <%= link_to design_contributor_design_contributor_path(post.design_contributor_id) do %>
              <div class="user_show_link1">
                <div class="user_show_link2">
                  <%= attachment_image_tag post.design_contributor, :profile_image, :fill, 45, 45, fallback: "no_image.jpg", class: "profile_image" %>
                </div>
                <div class="user_show_link3">
                  <%= post.design_contributor.pen_name %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
