<!--デザイン投稿者ログイン画面-->
<div class="content_width">
  <div class="login_form_content">
    <div class="login_form">
      <%= form_with model: @design_contributor, url: design_contributor_session_path, local: true do |f| %>
        <div class="field input_form">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email_form" %>
        </div>
        <div class="field input_form">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "password_form" %>
        </div>
        <div class="actions login_btn_form">
          <%= f.submit "ログイン", class: "login_btn" %>
        </div>
      <% end %>
    </div>

    <div class="main_logo">
      <h1 class="main_logo_item">Log in</h1>
    </div>

    <div class="another_user_link">
      <%= link_to new_company_session_path do %>
        <i class="fas fa-arrow-circle-right another_link_font"></i>
        <span class="another_link_font">アパレル関係者の方はこちらへ</span>
      <% end %>
    </div>
  </div>
</div>

