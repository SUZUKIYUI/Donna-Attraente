<!--デザイン投稿者新規登録画面-->

<div class="content_width">
  <div class="top_content signup_top1">
    <div class="signup_heading2_content">
      <div class="heading2 signup_heading2">
        <h2>新規登録</h2>
        <p>デザインを投稿される個人の方は<br />こちらのフォームから会員登録をお願いします。</p>
      </div>
      <div class="signup_decorate_back"></div>
    </div>
    <!-----------------見出し------------------>
    <div class="heading1">
      <h1>Sign up</h1>
    </div>
  </div>

  <div class="signup_bottom">
    <div class="signup_flex">
      <h3 class="signup_heading3">個人会員登録</h3>
      <%= link_to new_company_registration_path, class: "another_user_link" do %>
        <i class="fas fa-arrow-circle-right another_link_font"></i>
        <span class="another_link_font">アパレル関係者の方はこちらへ</span>
      <% end %>
    </div>
    <div class="design_contributor_form">
      <%= form_with model: @design_contributor, url: design_contributor_registration_path, id: "new_design_contributor", local: true do |f| %>
        <%= render "design_contributors/shared/error_messages", resource: resource %>
        <div class="field user_input_form">
          <label class="input_profile_image1">プロフィール画像を選択してください
            <%= f.attachment_field :profile_image, class: "user_input input_profile_image2" %>
          </label>
        </div>
        <div class="field user_input_form">
          <%= f.label :pen_name, "ペンネーム", class: "design_contributor_label" %>
          <%= f.text_field :pen_name, placeholder: "(例) Ami", class: "user_input pen_name_input" %>
        </div>
        <div class="field user_input_form">
          <%= f.label :self_introduction, "自己紹介", class: "design_contributor_label" %>
          <%= f.text_area :self_introduction, placeholder: "(例) 可愛い系の洋服が大好きです。自分でも可愛い服のデザインを考えたりします。よろしくお願いします。", class: "user_input introduction_input" %>
        </div>
        <div class="field user_input_form">
          <%= f.label :email, "メールアドレス", class: "design_contributor_label" %>
          <%= f.email_field :email, placeholder: "(例) ○○○@gmail.com", autocomplete: "email", class: "user_input" %>
        </div>
        <div class="field user_input_form">
          <%= f.label :password, "パスワード", class: "design_contributor_label" %>
          <%= f.password_field :password, placeholder: "６文字以上の半角英数字", autocomplete: "new-password", class: "user_input" %>
        </div>
        <div class="actions  user_input_btn_form">
          <%= f.submit "登録", class: "user_input_btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


