<!--デザイン投稿者新規登録画面-->

<div class="content_width signup_content">
  <div class="signup_top signup_background1">
    <div class="signup_lead_content">
      <div class="signup_lead1">
        <h2 class="signup_lead1_bold">新規登録</h2>
        <p>下のフォームから会員登録をお願いします。</p>
      </div>
      <div class="signup_background2"></div>
    </div>
    <!-----------------見出し------------------>
    <div class="signup_heading">
      <h1 class="signup_heading_item">Sign up</h1>
    </div>
  </div>

  <div class="signup_bottom">
    <div class="signup_flex">
      <h3 class="signup_lead2">個人会員登録</h3>
      <div class="another_user_link">
        <%= link_to new_company_registration_path do %>
          <i class="fas fa-arrow-circle-right another_link_font"></i>
          <span class="another_link_font">アパレル関係者の方はこちらへ</span>
        <% end %>
      </div>
    </div>
    <div class="signup_form">
      <%= form_with model: @design_contributor, url: design_contributor_registration_path, id: "new_design_contributor", class: "new_design_contributor", local: true do |f| %>
        <%= render "design_contributors/shared/error_messages", resource: resource %>
        <div class="field signup_input_form">
          <label class="input_profile_image1">プロフィール画像を選択してください
            <%= f.attachment_field :profile_image, class: "signup_input input_profile_image2" %>
          </label>
        </div>
        <div class="field signup_input_form">
          <%= f.label :pen_name, "ペンネーム", class: "signup_label" %>
          <%= f.text_field :pen_name, placeholder: "（例）Ami", autofocus: true, class: "signup_input" %>
        </div>
        <div class="field signup_input_form">
          <%= f.label :self_introduction, "自己紹介", class: "signup_label" %>
          <%= f.text_area :self_introduction, placeholder: "（例）可愛い系の洋服が大好きです。自分でも可愛い服のデザインを考えたりします。よろしくお願いします。", class: "signup_input introduction_input" %>
        </div>
        <div class="field signup_input_form">
          <%= f.label :email, "メールアドレス", class: "signup_label" %>
          <%= f.email_field :email, placeholder: "（例）○○○@gmail.com", autocomplete: "email", class: "signup_input email_input" %>
        </div>
        <div class="field signup_input_form">
          <%= f.label :password, "パスワード", class: "signup_label" %>
          <%= f.password_field :password, placeholder: "６文字以上の半角英数字", autocomplete: "new-password", class: "signup_input password_input" %>
        </div>
        <div class="actions  signup_btn_form">
          <%= f.submit "登録", class: "signup_btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


