<!--企業新規登録画面-->

<div class="content_width">
  <div class="top_content signup_top1">
    <div class="signup_heading2_content">
      <div class="heading2 signup_heading2">
        <h2>新規登録<span>アパレル関係者様用</span></h2>
        <p>デザインを採用される企業の方は<br />こちらのフォームから会員登録をお願いします。</p>
        <div class="signup_decorate_back"></div>
      </div>
    </div>
    <!-----------------見出し------------------>
    <div class="signup_heading1">
      <h1>Sign up</h1>
    </div>
  </div>

  <div class="signup_bottom">
    <div class="signup_flex">
      <h3 class="signup_heading3">アパレル関係者会員登録</h3>
      <div class="another_user_link">
        <%= link_to new_design_contributor_registration_path do %>
          <i class="fas fa-arrow-circle-right another_link_font"></i>
          <span class="another_link_font">個人の方はこちらへ</span>
        <% end %>
      </div>
    </div>
    <div class="signup_form">
      <%= form_with model: @company, url: company_registration_path, id: "new_company", class: "new_company", local: true do |f| %>
        <%= render "companies/shared/error_messages", resource: resource %>
        <div class="field signup_input_form">
          <label class="input_profile_image1">プロフィール画像を選択してください
            <%= f.attachment_field :profile_image, class: "signup_input input_profile_image2" %>
          </label>
        </div>
        <div class="field signup_input_form">
          <%= f.label :company_name, class: "signup_label" %>
          <%= f.text_field :company_name, placeholder: "（例）株式会社　○○", class: "signup_input" %>
        </div>
        <div class="field signup_input_form">
          <%= f.label :company_name_kana, class: "signup_label" %>
          <%= f.text_field :company_name_kana, placeholder: "（例）カブシキガイシャ　○○", class: "signup_input" %>
        </div>
        <div class="field signup_input_form">
          <%= f.label :postal_code, class: "signup_label" %>
          <%= f.text_field :postal_code, placeholder: "（例）100○○○○", class: "signup_input postal_code_input" %>
        </div>
        <div class="field signup_input_form">
          <%= f.label :address, class: "signup_label" %>
          <%= f.text_field :address, placeholder: "（例）東京都千代田区○○○○○○○○○○○○", class: "signup_input address_input" %>
        </div>
        <div class="field signup_input_form">
          <%= f.label :phone_number, class: "signup_label" %>
          <%= f.text_field :phone_number, placeholder: "（例）080-○○○○-○○○○", class: "signup_input" %>
        </div>
        <div class="field signup_input_form">
          <%= f.label :company_introduction, class: "signup_label" %>
          <%= f.text_area :company_introduction, placeholder: "自社ブランドの紹介、求めているデザインなど", class: "signup_input introduction_input" %>
        </div>
        <div class="field signup_input_form">
          <%= f.label :email, class: "signup_label" %>
          <%= f.email_field :email, placeholder: "（例）○○○@gmail.com", autocomplete: "email", class: "signup_input email_input" %>
        </div>
        <div class="field signup_input_form">
          <%= f.label :password, class: "signup_label" %>
          <%= f.password_field :password, placeholder: "６文字以上の半角英数字", autocomplete: "new-password", class: "signup_input password_input" %>
        </div>
        <div class="actions  signup_btn_form">
          <%= f.submit "登録", class: "signup_btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
