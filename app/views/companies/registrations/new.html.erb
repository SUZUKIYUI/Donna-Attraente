<!--企業新規登録画面-->

<div class="content_width">
  <div class="top_content signup_top1">
    <div class="signup_heading2_content signup_heading2_content_company">
      <div class="heading2 signup_heading2">
        <h2>新規登録<span>アパレル関係者様用</span></h2>
        <p>デザインを採用される企業の方は<br />こちらのフォームから会員登録をお願いします。</p>
      </div>
      <div class="signup_decorate_back"></div>
    </div>
    <!-----------------見出し------------------>
    <div class="heading1">
      <h1>Sign up</h1>
    </div>
  </div>

  <div class="signup_bottom">
    <div class="signup_flex">
      <h3 class="signup_heading3">アパレル関係者会員登録</h3>
      <%= link_to new_design_contributor_registration_path, class: "another_user_link" do %>
        <i class="fas fa-arrow-circle-right another_link_font"></i>
        <span class="another_link_font">個人の方はこちらへ</span>
      <% end %>
    </div>
    <div class="company_signup_form">
      <%= form_with model: @company, url: company_registration_path, id: "new_company", local: true do |f| %>
        <%= render "companies/shared/error_messages", resource: resource %>
        <div class="field user_input_form">
          <label class="input_profile_image1">プロフィール画像を選択してください
            <%= f.attachment_field :profile_image, class: "user_input input_profile_image2" %>
          </label>
        </div>
        <div class="field user_input_form">
          <%= f.label :company_name, class: "company_label" %>
          <%= f.text_field :company_name, placeholder: "(例) 株式会社　○○○○", class: "user_input" %>
        </div>
        <div class="field user_input_form">
          <%= f.label :company_name_kana, class: "company_label" %>
          <%= f.text_field :company_name_kana, placeholder: "(例) カブシキガイシャ　○○○○", class: "user_input" %>
        </div>
        <div class="field user_input_form">
          <%= f.label :postal_code, class: "company_label" %>
          <%= f.text_field :postal_code, placeholder: "(例) 100○○○○", class: "user_input postal_code_input" %>
        </div>
        <div class="field user_input_form">
          <%= f.label :address, class: "company_label" %>
          <%= f.text_field :address, placeholder: "(例) 東京都千代田区○○○○○○○○○○○○", class: "user_input address_input" %>
        </div>
        <div class="field user_input_form">
          <%= f.label :phone_number, class: "company_label" %>
          <%= f.text_field :phone_number, placeholder: "(例) 080-○○○○-○○○○", class: "user_input phone_number_input" %>
        </div>
        <div class="field user_input_form">
          <%= f.label :company_introduction, class: "company_label" %>
          <%= f.text_area :company_introduction, placeholder: "自社ブランドの紹介、求めているデザインなど", class: "user_input introduction_input" %>
        </div>
        <div class="field user_input_form">
          <%= f.label :email, class: "company_label" %>
          <%= f.email_field :email, placeholder: "(例) ○○○@gmail.com", autocomplete: "email", class: "user_input" %>
        </div>
        <div class="field user_input_form">
          <%= f.label :password, class: "company_label" %>
          <%= f.password_field :password, placeholder: "６文字以上の半角英数字", autocomplete: "new-password", class: "user_input" %>
        </div>
        <div class="actions  user_input_btn_form">
          <%= f.submit "登録", class: "user_input_btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
