<h2>アパレル関係者様用</h2>

<div class="login_form">
  <%= form_with model: @company, url: company_session_path, local: true do |f| %>
    <div class="input_form">
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
</div>

<%= link_to "個人の方はこちらへ", new_design_contributor_session_path %>

