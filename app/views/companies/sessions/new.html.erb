<h2>アパレル関係者様用</h2>

<div class="login_form_content">
  <div class="login_form">
    <%= form_with model: @company, url: company_session_path, local: true do |f| %>
      <div class="field input_form">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field input_form">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="actions login_btn">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
  </div>
</div>

<div class="another_user_link">
  <%= link_to "個人の方はこちらへ", new_design_contributor_session_path %>
</div>
