<!--企業オファー新規登録画面-->

<div class="content_width offer_back">

  <h1 class="offer_heading">オファーを送る</h1>

  <div class="offer_detail offer_detail1">
    <%= attachment_image_tag @post, :post_image, :fill, 400, 550, class: "offer_post_image" %>
    <p class="offer_announce">このデザインに<span>商品化のオファーを送ります</span></p>
  </div>

  <div class="offer_new_content">
    <!-----------------未入力の時のエラー文表示------------------>
    <% if @offer.errors.any? %>
      <div class="error_box offer_error_box">
        <ul>
          <% @offer.errors.full_messages.each do |message| %>
            <li class="error_list">
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <!----------------------------------------------------------->
    <%= form_with model: [@post, @offer], url: company_post_offers_path(post_id: @post.id), local: true do |f| %>
      <div class="offer_new_form">
        <%= f.label :offer_comment, class: "offer_new_label" %>
        <%= f.text_area :offer_comment, class: "offer_new_input" %>
      </div>
      <div class="offer_new_btn_form">
        <%= f.submit "オファーする", class: "offer_new_btn" %>
      </div>
    <% end %>
  </div>
</div>
